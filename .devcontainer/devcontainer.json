{
  "name": "Dotfiles",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "postCreateCommand": ".devcontainer/postCreate.sh",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "timonwong.shellcheck"
      ]
    }
  }
}
